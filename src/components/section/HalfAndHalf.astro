import { cn } from "@/lib/utils";

type Props = {
  reverse?: boolean;
  class?: string;
};
const { class: className, reverse } = Astro.props;
---

<!-- TODO: Use Content80 -->
<section class={cn("col-[content]", "flex justify-center")}>
