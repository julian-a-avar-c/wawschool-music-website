    class={cn(
      "flex flex-col xl:grid xl:grid-cols-2 gap-16",
      { "flex-col-reverse": reverse },
      { "xl:[direction:rtl]": reverse },
      "*:[direction:ltr]",
      "w-[80%]",

      //
      "[&>img]:rounded-md",

      "[&>div]:flex [&>div]:flex-col",
      "[&>div]:gap-4",
      // "[&>div]:bg-cover [&>div]:bg-center",

      //
      "[&>div>h2]:text-5xl [&>div>h2]:font-bold [&>div>p]:text-lg",
    )}
