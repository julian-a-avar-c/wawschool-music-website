---
import { cn } from "@/lib/utils";
import { Icon } from "astro-icon/components";
---

<footer
  class={cn("col-[fullbleed]", "grid grid-cols-subgrid", "text-white", "py-12")}
  style="background-color: #d14f4f;"
>
  <div
    class={cn(
      "col-[content]",
      "flex flex-col md:flex-row",
      "items-center justify-between",
      "gap-8",
    )}
  >
    <!-- Music School Info -->
    <div class="flex flex-col items-center md:items-start gap-4">
      <div class="text-2xl font-bold">WAW Music School</div>
      <div
        class="flex flex-col items-center md:items-start gap-2 text-sm opacity-90"
      >
        <a
          href="https://www.carlacampopiano.com"
          class="flex items-center gap-2 hover:opacity-75 transition-opacity"
        >
          <Icon name="fa6-solid:globe" class="text-sm" />
          carlacampopiano.com
        </a>
        <a
          href="https://www.instagram.com/WAWmusicschool"
          class="flex items-center gap-2 hover:opacity-75 transition-opacity"
        >
          <Icon name="fa6-brands:instagram" class="text-sm" />
          @WAWmusicschool
        </a>
      </div>
    </div>

    <!-- Email Signup Form -->
    <div
      class="flex flex-col items-center md:items-end gap-4 max-w-md w-full md:w-auto"
    >
      <div class="text-center md:text-right">
        <h3 class="text-lg font-semibold mb-2">Stay in the Loop!</h3>
        <p class="text-sm opacity-90">
          Get notified about upcoming events and music programs
        </p>
      </div>

      <form class="flex flex-col sm:flex-row gap-2 w-full">
        <input
          type="email"
          placeholder="Enter your email"
          required
          class="flex-1 px-4 py-2 rounded-lg border-0 text-gray-900 placeholder-gray-500 focus:ring-2 focus:ring-white focus:outline-none"
        />
        <button
          type="submit"
          class="px-6 py-2 bg-white text-[#d14f4f] font-semibold rounded-lg hover:bg-gray-100 transition-colors whitespace-nowrap"
        >
          Sign Up
        </button>
      </form>
    </div>
  </div>

  <!-- Copyright -->
  <div
    class="col-[content] mt-8 pt-6 border-t border-white/20 text-center text-sm opacity-75"
  >
    Â© 2025 WAW Music School. All rights reserved.
  </div>
</footer>
