---
import Layout from "@/layouts/Layout.astro";

import { config as mainConfig } from "@/config/main";

import Header from "@/components/layout/Header.astro";
import Footer from "@/components/layout/Footer.astro";
import Hero from "@/components/section/Hero.astro";
import { cn } from "@/lib/utils";
import type { ReactNode } from "react";

type Props = {
  key: string;
  title: string;
  nav: { href?: string; node: ReactNode }[];
};

const { key, title, nav } = Astro.props;
---

<Layout title={mainConfig.shortTitle} class="w-full grid-rows-[auto_8px_auto]">
  <Header class="row-[1/3] z-10" />

  <main
    class={cn(
      "col-[fullbleed] row-[2/4]",
      "grid grid-cols-subgrid",
      "relative",
    )}
  >
    <div class="w-full h-[8px]"></div>
    <Hero key={key} title={title} nav={nav} />
    <slot />
  </main>

  <Footer />
</Layout>
