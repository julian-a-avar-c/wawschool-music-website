<style lang="scss">
  html,
  body {
    margin: 0px;
    width: 100%;
    scroll-behavior: smooth;
  }
  body {
    display: grid;
    grid-template-columns:
      [fullbleed-start]
      var(--bleed-width)
      [content-start]
      var(--content-width)
      [content-end]
      var(--bleed-width)
      [fullbleed-end];

    /* Add subtle floating animation to the background */
    position: relative;
    overflow-x: hidden;

    @media (width <= 40rem) {
      --bleed-width: 4px;
      --content-width: calc(100%-var(--bleed-width));
    }
    @media (40rem <= width <= 48rem) {
      --bleed-width: 1fr;
      --content-width: 40rem /* 640px */;
    }
    @media (48rem <= width <= 64rem) {
      --bleed-width: 1fr;
      --content-width: 48rem /* 768px */;
    }
    @media (64rem <= width <= 80rem) {
      --bleed-width: 1fr;
      --content-width: 64rem /* 1024px */;
    }
    @media (80rem <= width <= 96rem) {
      --bleed-width: 1fr;
      --content-width: 80rem /* 1280px */;
    }
    @media (96rem <= width) {
      --bleed-width: 1fr;
      --content-width: 96rem /* 1536px */;
    }
  }

  /* Friendly floating elements */
  body::before {
    content: "";
    position: fixed;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background:
      radial-gradient(
        circle at 20% 80%,
        rgba(209, 79, 79, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 80% 20%,
        rgba(255, 165, 0, 0.1) 0%,
        transparent 50%
      ),
      radial-gradient(
        circle at 40% 40%,
        rgba(255, 192, 203, 0.1) 0%,
        transparent 50%
      );
    animation: float 20s ease-in-out infinite;
    z-index: -1;
    pointer-events: none;
  }

  @keyframes float {
    0%,
    100% {
      transform: translate(0px, 0px) rotate(0deg);
    }
    33% {
      transform: translate(30px, -30px) rotate(1deg);
    }
    66% {
      transform: translate(-20px, 20px) rotate(-1deg);
    }
  }
</style>
